@model Models.CaptchaKeys

@{
    ViewData["Title"] = "Captcha Server";
    
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>2Captcha Server</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-area="Admin" asp-controller="Default" asp-action="Index">Inicio</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>2Captcha Server</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content animated fadeIn" style="animation-delay: 0.4s;">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <a href="#myModal" data-toggle="modal" data-target="#edit-modal" class="btn btn-success">Actualizar ApiKey</a>
                </div>
                <div class="ibox-content">
                    <div class="col-sm-4">
                        <ul class="list-group m-t">
                            <li class="list-group-item">
                                <span class="label label-success float-left"> -</span> <strong class="float-left">&nbsp;ApiKey:&nbsp;</strong>
                                <span class="float-left">
                                    @Model.Id
                                </span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- modal window -->
<div id="edit-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <form asp-controller="CaptchaServer" asp-action="Edit" method="post" class="form-horizontal" id="form2" form="form2" role="form"
                  data-ajax="true"
                  data-ajax-method="post"
                  data-ajax-begin="onAjaxBegin"
                  data-ajax-failure="onAjaxError"
                  data-ajax-complete="dismiss_modal"
                  data-ajax-success="onSaveSuccess"
                  data-ajax-update="#body_content">

                <div class="modal-header">
                    <div>
                        <h3 class="modal-title">Actualizar ApiKey</h3>
                        <small>Copie el valor de ApiKey generado por 2Captcha</small>
                    </div>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="panel-body">
                    <div class="ibox float-e-margins">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">ApiKey</label>
                            <div class="col-sm-9">
                                <input id="ApiKey" name="ApiKey" type="text" class="form-control" placeholder="" value="" autofocus>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-success ladda-button" id="mdlsave" name="mdlsave" data-style="expand-right">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- modal window end -->

@section Scripts {
    <environment include="Development">
        <script src="~/js/common/modal.js"></script>
        <script src="~/js/Admin/CaptchaServer/index.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/common/modal.min.js" asp-append-version="true"></script>
        <script src="~/js/Admin/CaptchaServer/index.min.js" asp-append-version="true"></script>
    </environment>

}