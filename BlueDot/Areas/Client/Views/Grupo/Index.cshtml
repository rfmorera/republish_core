@model IEnumerable<GrupoIndexDTO>
@{
    ViewData["Title"] = "Grupos";
}
@section Stylesheets {
    <link rel="stylesheet" href="~/css/common/switch.min.css" asp-append-version="true" />
    <environment include="Development">
        <link rel="stylesheet" href="~/css/common/dataTables.editor_custom.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/common/dataTables.editor_custom.min.css" asp-append-version="true" />
    </environment>
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Grupos</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-area="Client" asp-controller="Default" asp-action="Index">Inicio</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Grupos</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<!-- Content -->
<div class="wrapper wrapper-content animated fadeIn" style="animation-delay: 0.4s;">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <a href="#myModal" data-toggle="modal" data-target="#edit-modal" class="btn btn-primary">Añadir Grupo</a>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table id="dataTables-table" class="table table-striped table-bordered table-hover dataTables-example" data-edit-url="@Url.Action("Edit", "FormsMapping")" data-row-id-property-name="@nameof(GrupoIndexDTO.Id)">
                            <thead>
                                <tr>
                                    <th width="10%">Acciones</th>
                                    <th width="10%">Estado</th>
                                    <th width="40%">Nombre</th>
                                    <th width="30%">Cantidad de Anuncios</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (GrupoIndexDTO item in Model)
                                {
                                    <tr class="gradeX">
                                        <td>
                                            <a asp-area="Client" asp-controller="Grupo" asp-action="Details" asp-route-GrupoId="@item.Id" class="btn btn-white btn-sm tooltip-demo"><i class="fa fa-eye" data-toggle="tooltip" data-placement="top" title="Detalles"></i></a>
                                            <a asp-area="Client" asp-controller="Grupo" asp-action="Delete" asp-route-GrupoId="@item.Id" class="btn btn-white btn-sm1 tooltip-demo delete-button" data-form-id="delete-form"><i class="fa fa-trash-o" data-toggle="tooltip" data-placement="top" title="Eliminar"></i></a>
                                        </td>
                                        <td>
                                            <div class="onoffswitch">
                                                <input type="checkbox" checked="" class="onoffswitch-checkbox" id="@item.Id">
                                                <label class="onoffswitch-label" for="@item.Id">
                                                    <span class="onoffswitch-inner"></span>
                                                    <span class="onoffswitch-switch"></span>
                                                </label>
                                            </div>
                                        </td>
                                        <td>
                                            @item.Nombre
                                        </td>
                                        <td>
                                            @item.CantidadAnuncios
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<form id="delete-form" method="post" role="form"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-begin="onAjaxBegin"
      data-ajax-success="onDeleteSuccess"
      data-ajax-failure="onAjaxError"
      data-ajax-complete="onAjaxCompleted"
      data-ajax-update="#body_content"></form>

<!-- modal window -->
<div id="edit-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <form asp-controller="Grupo" asp-action="Add" method="post" class="form-horizontal" id="form2" form="form2" role="form"
                  data-ajax="true"
                  data-ajax-method="post"
                  data-ajax-begin="onAjaxBegin"
                  data-ajax-failure="onAjaxError"
                  data-ajax-complete="dismiss_modal"
                  data-ajax-success="onAddSuccess"
                  data-ajax-update="#body_content">

                <div class="modal-header">
                    <div>
                        <h3 class="modal-title">Añadir Grupo</h3>
                        <small>Por favor entre el nombre del grupo</small>
                    </div>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="panel-body">
                    <div class="ibox float-e-margins">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Nombre</label>
                            <div class="col-sm-9">
                                <input id="Nombre" name="Nombre" type="text" class="form-control" placeholder="" value="">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary ladda-button" id="mdlsave" name="mdlsave" data-style="expand-right">Añadir</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- modal window end -->

@section Scripts {
    <partial name="~/Areas/Common/Views/_DataTables.cshtml" />
    <partial name="~/Areas/Common/Views/_DataTablesEditor.cshtml" />
    <environment include="Development">
        <script src="~/js/Client/Common/modal.js"></script>
        <script src="~/js/Client/Grupo/index.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/Client/Common/modal.min.js" asp-append-version="true"></script>
        <script src="~/js/Client/Grupo/index.min.js" asp-append-version="true"></script>
    </environment>

}