@model Pager

<!-- pager -->
@if (Model.EndPage > 1)
{
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li>
                <a asp-controller="@Model.Controller" asp-action="@Model.Action">Primera</a>
            </li>
            <li>
                <a asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-page="@(Model.CurrentPage - 1)">Ant</a>
            </li>
        }

        @for (int cur = Model.StartPage; cur <= Model.EndPage; cur++)
        {
            <li class="@(cur == Model.CurrentPage ? "active" : "")">
                <a asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-page="@cur">@cur</a>
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li>
                <a asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-page="@(Model.CurrentPage + 1)">Sig</a>
            </li>
            <li>
                <a asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-page="@(Model.TotalPages)">Última</a>
            </li>
        }
    </ul>
}