@using Republish.Models.Identity
@model InputUsernameModel

<p class="Republish-login-text text-center">Log in to Republish</p>
<form class="m-t" role="form" method="post" 
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update="#Republish-login-form"
      data-ajax-begin="onAjaxBegin"
      data-ajax-failure="displayToastrError"
      data-ajax-complete="completed"
      data-ajax-url="/Identity/Account/Login">

    <div class="form-group">
        <input asp-for="UserName" type="text" class="form-control" placeholder="Username" id="UserName">
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" class="btn btn-primary block full-width m-b ladda-button" data-style="expand-right">Login</button>
    <a asp-page="./ForgotPassword" class="btn btn-sm btn-white btn-block">Reset password</a>
</form>
<partial name="~/Areas/Identity/Pages/_SecurityCertificatesPartial.cshtml" />
<script>
    $(document).ready(function () {
        $("#UserName").focus();
    });
</script>