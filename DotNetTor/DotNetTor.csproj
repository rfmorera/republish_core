<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Stable and performant Tor library in .NET Core.</Description>
    <Copyright>MIT</Copyright>
    <AssemblyTitle>DotNetTor</AssemblyTitle>
    <VersionPrefix>2.1.3</VersionPrefix>
    <Authors>nopara73</Authors>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>DotNetTor</AssemblyName>
    <PackageId>DotNetTor</PackageId>
    <PackageTags>tor</PackageTags>
    <PackageReleaseNotes></PackageReleaseNotes>
    <PackageIconUrl>http://img.tamindir.com/ti_e_ul/lucifer/tor-ikon.gif</PackageIconUrl>
    <PackageProjectUrl>https://github.com/nopara73/DotNetTor</PackageProjectUrl>
    <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
    <Version>3.0.0</Version>
  </PropertyGroup>

  <PropertyGroup>
    <LangVersion>latest</LangVersion>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>bin\Debug\netstandard2.0\DotNetTor.xml</DocumentationFile>
    <NoWarn>1701;1702;1705;CS1591;CS1573</NoWarn>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\netstandard2.0\DotNetTor.xml</DocumentationFile>
    <NoWarn>1701;1702;1705;CS1591;CS1573</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ConcurrentHashSet" Version="1.0.2" />
    <PackageReference Include="DotNetEssentials" Version="1.0.6" />
    <PackageReference Include="Nito.AsyncEx.Coordination" Version="1.0.2" />
    <PackageReference Include="System.Net.NameResolution" Version="4.3.0" />
    <PackageReference Include="System.Net.Security" Version="4.3.2" />
  </ItemGroup>

</Project>
